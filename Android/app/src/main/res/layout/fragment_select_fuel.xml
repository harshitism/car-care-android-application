        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="Select your vehicle fuel type "
            android:textColor="@color/Grey900"
            android:textSize="20sp" />

        <RelativeLayout
            android:id="@+id/petrol"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom_border_grey"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:padding="20dp">

            <ImageView
                android:id="@+id/iv1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:tint="@color/Grey300"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/gas_station" />

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/iv1"
                android:text="PETROL"
                android:layout_centerVertical="true"
                android:textColor="@color/Grey700"
                android:textSize="25sp" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/diesel"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom_border_grey"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:padding="20dp">

            <ImageView
                android:id="@+id/iv2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:tint="@color/Grey300"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/gas_station" />

            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/iv2"
                android:text="DIESEL"
                android:textColor="@color/Grey700"
                android:textSize="25sp" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/cng"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom_border_grey"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:padding="20dp">

            <ImageView
                android:id="@+id/iv3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:tint="@color/Grey300"
                app:srcCompat="@drawable/gas_station" />

            <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/iv3"
                android:text="CNG"
                android:textColor="@color/Grey700"
                android:textSize="25sp" />


        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="Enter your odometer reading"
            android:textColor="@color/Grey900"
            android:textSize="20sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="(Please fill correct reading. All recommendations will be based on odometer reading)"
            android:textColor="@color/Red500"
            android:textSize="10sp" />

        <EditText
            android:id="@+id/odometer"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:hint="ODOMETER "
            android:textSize="20dp"
            android:gravity="center"
            android:digits="0123456789"
            android:inputType="number"
            android:background="@drawable/custom_border_grey"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            />
        <Button
            android:id="@+id/next"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="NEXT"
            android:textColor="@color/White"
            android:background="@drawable/custom_button_green"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            />

    </LinearLayout>


</ScrollView>
