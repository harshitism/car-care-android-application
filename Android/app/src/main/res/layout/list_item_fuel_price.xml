<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/White"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="10dp">

        <TextView
            android:id="@+id/city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="City"
            android:textColor="@color/Grey800"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/city"
            android:text="State"
            android:textColor="@color/Grey500"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/diesel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Rs 67.14"
            android:textColor="@color/Orange500"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/diesel_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/diesel"
            android:text="Diesel / Litre"
            android:textColor="@color/Orange800"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/petrol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@id/diesel"
            android:text="Rs 77.14"
            android:textColor="@color/Green500"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/petrol_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/petrol"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@id/diesel"
            android:text="Petrol / Litre"
            android:textColor="@color/Green800"
            android:textSize="10sp" />
    </RelativeLayout>


</RelativeLayout>

